
{
  "name": "hideReposts",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Injecting javascript to remove reposts on Soundcloud",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Inject!"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}